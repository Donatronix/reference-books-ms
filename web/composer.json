{
    "name": "kus/reference-books-ms",
    "description": "Reference Books API Microservice",
    "type": "project",
    "private": true,
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "laravel/lumen-framework": "~8"
    },
    "require-dev": {
        "fakerphp/faker": "~1",
        "mockery/mockery": "~1",
        "phpunit/phpunit": "~9"
    },
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../sumra-sdk",
            "options": {
                "symlink": false
            }
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
